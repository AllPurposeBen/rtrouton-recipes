<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Description</key>
	<string>Downloads the latest version of Poly Lens and creates a package.</string>
	<key>Identifier</key>
	<string>com.github.rtrouton.pkg.polylens</string>
	<key>Input</key>
	<dict>
        <key>NAME</key>
        <string>Poly Lens</string>
        <key>VENDOR</key>
        <string>Poly</string>
        <key>SOFTWARETITLE</key>
        <string>Lens</string>
	</dict>
	<key>MinimumVersion</key>
	<string>1.0.0</string>
	<key>ParentRecipe</key>
	<string>com.github.rtrouton.download.polylens</string>
	<key>Process</key>
	<array>
		<dict>
			<key>Processor</key>
			<string>AppPkgCreator</string>
            <key>Arguments</key>
            <dict>
                <key>app_path</key>
                <string>%pathname%/Poly Lens.app</string>
                <key>pkg_path</key>
                <string>%RECIPE_CACHE_DIR%/%VENDOR%_%SOFTWARETITLE%_%version%.pkg</string>
            </dict>
		</dict>
	</array>
</dict>
</plist>
